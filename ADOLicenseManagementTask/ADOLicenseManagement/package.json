{
  "name": "taskwrapper",
  "description": "Task Wrapper To Load on non Windows OS",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run transpile",
    "package": "npm prune --production && npm run copy",
    "copy": "ncp ./node_modules ./task/node_modules && ncp ./dist/src ./task",
    "clean": "del-cli ./dist/src ./dist/test ./task/*.js ./task/*.js.map ./task/node_modules",
    "transpile": "tsc -p ./",
    "lint": "eslint src/*.ts test/*.ts",
    "test": "mocha -r ts-node/register ./test/*.test.ts --reporter mocha-junit-reporter --reporter-options mochaFile=./test-output/test-results.xml",
    "test-no-logger": "mocha -r ts-node/register ./test/*.test.ts"
  },
  "main": "test.js",
  "dependencies": {
    "azure-devops-node-api": "^12.0.0",
    "azure-pipelines-task-lib": "^4.0.0",
    "ncp": "^2.0.0",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.10",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.2.3",
    "chai": "^4.3.10",
    "del": "^7.0.0",
    "del-cli": "^4.0.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.0.2",
    "ts-node": "^10.9.1",
    "eslint": "^8.56.0",
    "typescript": "^5.4.5"
  },
  "author": "Aammir Mirza",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  }
}